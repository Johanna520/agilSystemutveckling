    @foreach (var item in Model.commentList)
    {

        <p>
            @Html.DisplayFor(modelItem => item.Comment)
        </p>
        <hr />
        <br />

    }
    <hr />
     -->








</body>
</html>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}