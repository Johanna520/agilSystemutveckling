@page
@model IBBS.Pages.BurgerPageModel
@{ }

<div id="heading" class="container-sm">
    <h1>Burgers</h1>
</div>
<div id="burgercarousel" class="carousel slide" data-interval="false" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#burgercarousel" data-slide-to="0" class="active"></li>
        <li data-target="#burgercarousel" data-slide-to="1"></li>
        <li data-target="#burgercarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/IBBSburger.png" class="d-block w-100 pic" alt="...">
            <div id="picturetext" class="carousel-caption d-none d-md-block">
                <h5>First slide label</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/IBBSburger.png" class="d-block w-100 pic" alt="...">
            <div id="picturetext" class="carousel-caption d-none d-md-block">
                <h5>Second slide label</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/IBBSburger.png" class="d-block w-100 pic" alt="...">
            <div id="picturetext" class="carousel-caption d-none d-md-block">
                <h5>Third slide label</h5>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#burgercarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#burgercarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<div id="likes" class="container">
    <div class="row justify-content-md-center">
        <div class="col-lg-2">
            <img class="thumbspic thumbsup" id="thumbsup" src="~/images/Tummeup.png" />
            <span id="Likes">@Model.likes[0].Like</span>
        </div>
        <div class="col-lg-2">
            <img class="thumbspic thumbdown" id="thumbsdown" src="~/images/Tummener.png" />
            <span id="dislikes"></span>
        </div>
    </div>
</div>


<script src="/js/LikeAPI.js"></script>
<script src="~/js/BurgerPage.js"></script>
<br />
<br />
<table class"table">
    <thead>
        <tr>
            <td>
                Comments
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.commentList)
        {
            <tr>
                <td>
                    @item.Comment
                </td>
            </tr>
        }
        <tr>


            <form method="post">
                <div class="theComment">
                    <label asp-for="newComment.Comment" class="control-label"></label>
                    <input asp-for="newComment.Comment" class="form-control" />
                    <span asp-validation-for="newComment.Comment" class="btnComment"></span>

                </div>
                <br />
                <div class="comment">
                    <input type="submit" value="Create" class="btnComment" />
                </div>

            </form>
        </tr>
    </tbody>
</table>
