@page
@model IBBS.Pages.CreateBurgerModel
@{
    <script src="~/js/dragndrop.js" defer></script>
}


<div class="burger-container">
    <div class="burgermaker">
        <a class="save"> Save</a>
        <div class="imgcont">
            <img class="Burgerimg BunTop draggable" draggable="true" id="TopBun" src="~/images/Burger/TopLightBun.png" alt="">
            <img class="Burgerimg sallad draggable" draggable="true" id="sallad" src="/images/Burger/Sallad.png" alt="">
            <img class="Burgerimg tomato draggable" draggable="true" id="tomato" src="/images/Burger/Tomato.png" alt="">
            <img class="Burgerimg meat draggable" draggable="true" id="meat" src="/images/Burger/Beef.png" alt="">
            <img class="Burgerimg BunBottom draggable" draggable="true" id="BottomBun" src="/images/Burger/BottomLightBun.png" alt="">
        </div>

        <div class="itemcategories">
            <div class="itemdiv">
                <a class="Itembtn" data-toggle="collapse" href="#collapseExample1" role="button"
                   aria-expanded="false" aria-controls="collapseExample">
                    Top Bun
                </a>
                <a class="Itembtn" data-toggle="collapse" href="#collapseExample3" role="button"
                   aria-expanded="false" aria-controls="collapseExample">
                    Extra stuff
                </a>
                <a class="Itembtn" data-toggle="collapse" href="#collapseExample4" role="button"
                   aria-expanded="false" aria-controls="collapseExample">
                    Protien
                </a>
                <a class="Itembtn" data-toggle="collapse" href="#collapseExample5" role="button"
                   aria-expanded="false" aria-controls="collapseExample">
                    Bottom Bun
                </a>
            </div>

            <div class="collapse insdecollapse" id="collapseExample1">
                <div>
                    <a class="Choicebtn " id="TopBunBtn">TopLightBun</a>
                </div>
                <div>
                    <a class="Choicebtn " id="TopBunBtn">SalladBunTop</a>
                </div>
                <div>
                    <a class="Choicebtn " id="TopBunBtn">TopBunDark</a>
                </div>
            </div>
            <div class="collapse insdecollapse" id="collapseExample3">
                <div>
                    <a class="Choicebtn" id="SalladBtn">Sallad</a>
                </div>
                <div>
                    <a class="Choicebtn" id="TomatoBtn">Tomato</a>
                </div>
                <div>
                    <a class="Choicebtn" id="TomatoBtn">Avocado</a>
                </div>
                <div>
                    <a class="Choicebtn" id="TomatoBtn">Sallad</a>
                </div>
                <div>
                    <a class="Choicebtn" id="TomatoBtn">Onion</a>
                </div>
                <div>
                    <a class="Choicebtn" id="TomatoBtn">Cucumber</a>
                </div>
                <div>
                    <a class="Choicebtn" id="MeatBtn">Bacon</a>
                </div>
            </div>
            <div class="collapse insdecollapse" id="collapseExample4">
                <div>
                    <a class="Choicebtn" id="MeatBtn">Beef</a>
                </div>
                <div>
                    <a class="Choicebtn" id="MeatBtn">Hahalloumi</a>
                </div>
                <div>
                    <a class="Choicebtn" id="MeatBtn">Chicken</a>
                </div>
            </div>
            <div class="collapse insdecollapse" id="collapseExample5">
                <div>
                    <a class="Choicebtn" id="BottomBunBtn">BottomLightBun</a>
                </div>
                <div>
                    <a class="Choicebtn" id="BottomBunBtn">SalladBunBottom</a>
                </div>
                <div>
                    <a class="Choicebtn" id="BottomBunBtn">BottomBunDark</a>
                </div>
            </div>
        </div>
    </div>
    <ol>
        @foreach (var item in Model.Ingredients)
        {
            <li>@item.Name</li>

        }
    </ol>
</div>
